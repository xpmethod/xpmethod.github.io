/* Global ------------------------------------------------------------------ */

@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');

* {
  margin: 0;
  padding: unset;
}


/* set root font size to allow ems to be a multiple of 10, ie 1.2em = 12 pix */
html {
  font-size: 62.5%;
}

body {
  height: 100%;
  background-color: white;
  font-size: 19px;
  font-family: "Cardo";
  font-size: 1.8rem;
}

@font-face {
  font-family: 'Inconsolata';
  font-style: normal;
  font-weight: 400;
  src: local('Inconsolata'), url(http://themes.googleusercontent.com/static/fonts/inconsolata/v6/BjAYBlHtW3CJxDcjzrnZCJ0EAVxt0G0biEntp43Qt6E.ttf) format('truetype');
}

@font-face {
  font-family: 'Cardo';
  font-style: normal;
  font-weight: 400;
  src: local('Cardo'), local('Cardo-Regular'), url(http://themes.googleusercontent.com/static/fonts/cardo/v5/vjI-nu0OQ4awNWMtISxB9w.ttf) format('truetype');
}

h1, h2, h3, h4, h5, h6 {
  font-size: 100%;
}

.cats h3 a:hover {
    color: DarkSlateGray;
}

#strain h3 a {
    color: DarkSlateGray;
}

#strain h3 a:hover {
    color: black;
}

h1 {
  margin-bottom: 1em;
}

p {
  margin-bottom: 1em;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern";
  -webkit-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern=1";
  font-kerning: normal;
  -webkit-hyphens: auto;
  -moz-hyphens: auto;
  -ms-hyphens: auto;
  hyphens: auto;
  font-family: "Cardo", serif;
}

a {
  color: DarkSlateGray;
  text-decoration: none;
}

h3 a:link {
    color: black;
}

a:hover, a:visited:hover, a:hover span.new, a:visited:hover span.new {
  color: black;
}

a:visited {
  color: #848;
}

ul {
  list-style-type: square;
}

table {
  padding-bottom: 1em;
  border-spacing: 0;
}

table tr:nth-child(2n) {
  background-color: #f8f8f8;
}

table tr th {
  font-weight: bold;
  text-align: left;
  border-bottom: 1px solid #ccc;
  padding: 6px 13px;
}

table tr td {
  border: 0px solid gray;
  text-align: left;
  padding: 6px 13px;
}

.video {
  margin-top: 1.5em;
  margin-bottom: 2em;
}

.indent {
  margin-left: 0e;
}

.indent p {
    margin-top: 0em;
}

#taglist {
  list-style: none;
}

#taglist li {
  display: inline;
}

#taglist li:after {
  content: ", ";
}

/* this gets rid of the trailing comma */
#taglist li:last-child:after {
  content: "";

}

/* oxford comma for the last element, using for name lists */
#taglist li:nth-last-child(3) ~ li:nth-last-child(2):after {
  content: ", & ";
}

#sparkle {

  font-size: .6em;
  font-family: 'Inconsolata', monospace;
  text-align: left;
}

#caption {

  font-size: .8em;
  font-family: 'Inconsolata', monospace;
  font-style: italic;
  text-align: left;
  float:right;
}

#related {
  margin-top: 2em;
}

  #related h2 {
    margin-bottom: 1em;
  }

#disqus_thread {
  font: 13.34px helvetica, arial, clean, sans-serif;
  margin-top: 2em;
  border-top: 2px solid #eee;
  padding-top: 2em;
}

.x {
  text-decoration: line-through;
}

span.new {
  color: #e99;
}

.last {
  margin-bottom: 1em;
}

blockquote{background:#f9f9f9;border-left:1em solid #eee;margin:1.5em 1em;padding:.5em 1em;quotes:"\201C""\201D";}
       blockquote:before{color:#808080;content:open-quote;font-size:4em;line-height:.1em;margin-right:.25em;vertical-align:-.4em;}
       blockquote :first-child{display:inline;}
       blockquote :last-child{margin-bottom:0;}

/* Double-color dashed line */ 
hr.style-dashed { 
   border: 0; 
   border-bottom: 1px dashed #ccc; 
   background: #999; 
   text-align:center; 
   margin: 1em auto;
   width: 45%
} 

/* Home ------------------------------------------------------------ */
/* Home ------------------------------------------------------------ */
/* Home ------------------------------------------------------------ */

.site #home ol,
ul.toc {
  margin-top: 1em;
  margin-left: 2em;
  list-style-type: decimal;
  margin-bottom: 2em;
}

ul.posts {
  list-style-type: none;
  margin-bottom: 2em;
}

ul.posts li {
  line-height: 1em;
}

ul.posts span {
  color: #aaa;
  font-family: 'Inconsolata', monospace;
  font-size: 80%;
}

/* Site ----------------------------------------------------------------- */
/* Site ----------------------------------------------------------------- */
/* Site ----------------------------------------------------------------- */

img {
  max-width: 75%;
}

.site {
  text-align: left;
  width: 70%;
  max-width: 39em;
  margin: 1em auto 2em auto;
}

.title {
  color: #A00;
  margin-bottom: 0em;
  text-align: left;
  font-family: 'Inconsolata';
}

.site .title a {
  color: black;
  text-decoration: none;
  font-size: 1.25em;
}

.site .issue-nav {
  text-align: right;
  margin-right: 0em;
  font-family: 'Inconsolata';
  font-size: .95em;
}

.site .issue-nav a {
  text-decoration: none;
  color: DarkSlateGray;
  font-family: 'Inconsolata';
}

.site .title a:hover,
.site .issue-nav a:hover {
  color: black;
}

.site  li.extra,
.site .title a.extra {
  color: DarkSlateGray;
  text-decoration: none;
}

.site .meta a {
  color: #aaa;
  text-decoration: none;
}

  .site .meta a:hover,
  .site #home a.extra:hover,
  .site #post a.extra:hover,
  .site .title a.extra:hover {
    color: black;
  }

  .title a.extra-active,
  .site .issue-nav a.active {
      color: red;
  }

  .site .meta {
    color: #aaa;
  }

  .site .footer {
    color: #666;
    border-top: 4px solid #eee;
    margin-top: 2em;
    overflow: hidden;
    clear: both;
    font-family: 'Inconsolata';
    padding-top: .5em;
  }

    .site .footer .contact a {
        color: #red;
      }

    .site .footer .rss {
      margin-top: 1.1em;
      margin-right: -.2em;
      float: right;
    }

      .site .footer .rss img {
        border: 0;
      }

  .site dl dt {
    text-decoration: underline;
  }

.site dl dt a,
.site dl dt a:hover,
.site dl dt a:visited:hover {
  text-decoration: inherit;
  color: inherit;
}

.site dl dd {
  margin: 1em 0;
  padding-left: 1.5em;
}


/* Posts ----------------------------------------------------*/
/* Posts ----------------------------------------------------*/
/* Posts ----------------------------------------------------*/

#post {

}

  /* standard */

  #post h2 {
    margin-top: 0.5em;
    margin-left: -.75em;
  }

  /* randomize post images */
  /* to break up the grid a bit*/

  #feature {
    float:right;
    margin:1.5em;
    max-width: 15em;
    width: 100%;
    height: auto;
    position: relative;
  }

  #feature img {
    float:right;
    max-width: 15em;
    width: 100%;
    height: auto;
    position: relative;
  }

  #feature figcaption {
    float:right;
    position: relative;
    font-style: italic;
  }

  #update-date {
    color: lightgray;
    margin-left: -3em;
    font-family: "Inconsolata";
  }

  #update-date-project {
    color: lightgray;
    margin-left: -3em;
    font-family: "Inconsolata";
    display: inline;
  }

  #update-text-project {
    margin-bottom: .5em;
    display: inline;
    text-align: left;
    padding: 0em;
  }

  #update-div {
    margin-top: .5em;
    margin-bottom: 1.5em;
    text-align: left;
  }

  #update-list {
    list-style-type: none;
    margin-bottom: .5em;
  }

  #update-link {
    color: black;
    font-family: "Inconsolata";
    color: gray;
    font-weight: normal;
    margin-right: 1em;
  }

  #update-link a:hover {
      color: DarkSlateGray;
  }

  #update {
    margin-bottom: 1em;
    text-align: left;
  }

  #update p {
    margin: 0em;
  }

  #update li {
    list-style-type: none;
  }

  #update-text {
    margin-bottom: .5em;
  }

  #post pre {
    border: 1px solid #ddd;
    background-color: #eef;
    padding: 0 .4em;
  }

  #post ul,
  #post ol {
    margin-left: 1em;
    margin-bottom: 1em;
    list-style-position: outside;
  }

  #post code {
    border: 1px solid #ddd;
    background-color: #eef;
    font-size: 95%;
    font-weight: normal;
    font-family: 'Inconsolata';
  }

    #post p code {
      font-size: 100%;
      border: none;
      background-color: white;
    }

    #post .nounderline dl dt {
      text-decoration: none;
      font-weight: bold;
    }

    #post dl dt code {
      background-color: white;
      border: none;
      text-decoration: none;
      font-size: 100%;
    }

    #post dl span.type {
      text-decoration: none;
      font-size: 100%;
      font-weight: normal;
      color: #444;
    }

    #post dl span.arg {
      text-decoration: none;
      font-size: 100%;
      font-weight: normal;
    }

    #post pre code {
      border: none;
    }

    #post .highlight {
      font-size: 95%;
    }


#gallery-box {
   margin-left: auto;
   margin-right: auto;
   position: relative;
   overflow: hidden;
}

#gallery-box img {
   max-width: 30%;
   margin: .5em;
   float: left;
}


/* event -------------------------------------------------- */
/* event -------------------------------------------------- */
/* event -------------------------------------------------- */

#prompt {
    margin-left: -2em;
    margin-right: -2em;
    margin-top: .5em;
    padding-left: 2em;
    padding-right: 2em;
    padding-bottom: 1em;
    padding-top: 1em;
    background-color: #FFFFCC;
}

#time {
    color: gray;
}

#participants {
    margin-bottom: 0em;
}

#post.event ul {
    margin-left: 0em;
}

#post.event h1 {
    margin-bottom: 0em;
}

/* events -------------------------------------------------- */
/* events -------------------------------------------------- */
/* events -------------------------------------------------- */

.events p {
    margin-top: 0em;
}

.events li {
    margin-bottom:.5em;
}

#column1 {
    width:45%;
}

#column2 {
    float:right;
    width:52%;
}

#archive {
  text-align: center;
  text-transform: lowercase;
}


/* footnotes -------------------------------------------------- */
/* footnotes -------------------------------------------------- */
/* footnotes -------------------------------------------------- */

.footnotes li {
    list-style-type: decimal;
}

a.footnote {
    color: DarkSlateGray;
}

.footnotes p {
    margin: 0px;
    text-align: left;
}


/* strains -------------------------------------------------- */
/* strains -------------------------------------------------- */
/* strains -------------------------------------------------- */

#strains {
    line-height: 1.3em;
    font-family: 'Inconsolata';
    vertical-align: sub;
    margin-bottom: 1em;
    text-align: left;
}

#strains li {
  display: inline;
}

#strains li:after {
  content: " Â» ";
}

/* this gets rid of the trailing comma*/
#strains li:last-child:after {
  content: "";

}

#strains a {
    text-decoration: none;
    color: black;
}

#strains a:hover {
    color: DarkSlateGray;
}

/* strain -------------------------------------------------- */
/* strain -------------------------------------------------- */
/* strain -------------------------------------------------- */

#peoplelist {
    margin-bottom: .5em;
}

#strain {
    overflow: auto;
    margin-bottom: .5em;
}

#strain img {
    float: right;
    margin: 1.5em;
    width: 100%;
    height: auto;
    position: relative;
    max-width: 15em;
    margin-top: .5em;
}
